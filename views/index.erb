<% if @profile %>
  <div id="profile-photo" class="col-md-12">
      <a href="http://<%= @profile["homepage"] %>" target="_blank"><img class="profile-img" src="/images/137bb71.jpg" alt="Chris" /></a>
  </div>
<div class="col-md-12">
    <h1 id="name-header" class="text-center"><a href="http://<%= @profile["homepage"] %>" target="_blank"><%= @profile["first_name"] %> <%= @profile["last_name"] %></a></h1>
    <h3 id="sub-header" class="text-center"><small>We Got Coders Profile</small></h3>
    <div id="badge-well" class="col-md-6 col-md-offset-3">
      <a href="http://github.com/<%= @profile["github"] %>" target="_blank"><img class="website-badge" src="/images/GitHub_Logo.png" /></a>
      <a href="http://www.codecademy.com/chrapp" target="_blank"><img class="website-badge" src="/images/codecademy_logo.png" /></a>
    </div>
</div>
<div class="col-md-6">
  
</div>
  <!-- TODO- Perhaps re-jig this to fit your new design / layout -->
<div class="col-md-6 col-md-offset-3">
    <hr>
</div>

<div class="profile container-fluid">
  
  <div class="row">
      <div class="profile-section box col-md-12"> 
        <h3>About</h3>
          <p class="profile-value"><%= @profile["about"] %></p>
      </div>
      <div class="profile-section box col-md-6">
        <h3>Projects</h3>  
          <p class="profile-value"><%= @profile["projects"] %></p>
      </div>
      <div class="profile-section box col-md-6">
        <h3>Learning Experience</h3> 
          <p class="profile-value"><%= @profile["learning_experience"] %></p>
      </div>
  </div>
  <div class="row">
      <div class="profile-section box col-md-6">
        <h3>Ambition</h3>
          <p class="profile-value"><%= @profile["ambition"] %></p>
      </div>
      <div class="profile-section box col-md-6">
        <h3>Rationale</h3>
          <p class="profile-value"><%= @profile["rationale"] %></p>
      </div>
  </div>
</div>

<div class="other container-fluid">

  <div id="stats" class="col-md-6 box">
    <h3>Stats</h3>
    <span id="word-count"></span> words found.
  </div>

  <div id="problems" class="col-md-6 box">
    <h3>Programming Problems</h3>
    <a href="/primes">My Prime Number Solution</a>
  </div>

  <div class="cold-md-6 box">
    <h3>Edit Profile</h3>

    <form action="/update" method="POST">
      <fieldset>
        <div class="form-group">
          <label for="trainee[about]">About</label>
          <input type="text" name="trainee[about]" value="<%= @profile["about"] %>"/>
          <input type="text" name="trainee[github]" value="" />
        </div>

        <!-- TODO - Add more fields so that your profile can be edited -->

        <input type="submit" value="Update Profile" class="btn btn-primary" />
      </fieldset>
    </form>
  </div>

<!-- DEV: This is just to see what the fields are. -->
  <% @profile.each do |field, value| %>
    <div id="<%= field %>-box" class="col-md-12 profile-section box">
      <h3 class="box-header"><%= field %></h3>
    </div>
  <% end %>
<!-- END -->

</div>
<% else %>
  <div class="welcome">
    <p>Welcome! Once you have updated the OAuth tokens, the link below will fetch your profile information.</p>

    <a href="/authorise">Authorise</a>
  </div>
<% end %>


<!-- Add your Javascript to this script tag -->
<script language="javascript">

  var profile_values = document.getElementsByClassName('profile-value');
  var total_words = 0;
  // Double check I can get length in the manner I want to.
    // console.log(profile_values[1].innerHTML.split(" ").length)
  // Get the number of profile values elements for my for loop.
    // console.log(profile_values.length);
  for (var i = 0; i < profile_values.length; i++) {
    // Double check my for loop works as I want it to.
      // console.log(profile_values[i].innerHTML.split(" ").length);

    // Add each loop to the total words variable.
      total_words += profile_values[i].innerHTML.split(" ").length;
    // Log to console.
      // console.log(total_words)
  };

  document.getElementById('word-count').innerHTML = total_words;
</script>