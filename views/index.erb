  <div class="section-two">
    <div class="title">
      <h2><%=@profile.keys[0].capitalize%></h2>
        <div class="content">
          <h3><%=@profile["about"] %></h3>
        </div>
    </div>

    <div class="info-container">
      <div id="name" class="basic-info">
        <h2><%=@profile.keys[5].capitalize%></h2>
        <h3><%=@profile["first_name"] %> <%=@profile["last_name"] %></h3>
      </div>

      <div id="dob" class="basic-info">
        <h2><%=@profile.keys[3].capitalize%></h2>
