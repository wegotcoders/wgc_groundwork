  <div class="section-two">
    <div class="title">
      <h2><%=@profile.keys[0].capitalize%></h2>
        <div class="content">
          <h3 class ="profile-value"><%=@profile["about"] %></h3>
        </div>
    </div>

    <div class="info-container">
      <div id="name" class="basic-info">
        <h2><%=@profile.keys[5].capitalize%></h2>
        <h3 class ="profile-value"><%=@profile["first_name"] %> <%=@profile["last_name"] %></h3>
      </div>

      <div id="dob" class="basic-info">
        <h2><%=@profile.keys[3].capitalize%></h2>
        <h3 class ="profile-value"><%=@profile["dob"] %></h3>
      </div>

      <div id="phone" class="basic-info">
        <h2><%=@profile.keys[13].capitalize%></h2>
        <h3 class ="profile-value"><%=@profile["phone_number"] %></h3>
      </div>
    </div>
  </div>

  <div class="section-three">
    <div class="title">
      <h2><%=@profile.keys[1].capitalize%></h2>
        <div class="content">
          <h3 class ="profile-value"><%=@profile["ambition"] %></h3>
        </div>
    </div>
  </div>

  <div class="section-four">
    <div class="title">
      <h2>Codecademy</h2>
        <div class="content">
          <h3 class ="profile-value">Username: <%=@profile["codecademy"] %></h3>
        </div>
    </div>

    <div class="info-container">
      <div id="htmlcss" class="basic-info">
        <h2>HTML & CSS </h2>
        <h3 class ="profile-value"><%=@profile["web_track_completedness"] %></h3>
      </div>

      <div id="javascript" class="basic-info">
        <h2>Javascript</h2>
        <h3 class ="profile-value"><%=@profile["js_track_completedness"] %></h3>
      </div>

      <div id="ruby" class="basic-info">
        <h2>Ruby</h2>
        <h3 class ="profile-value"><%=@profile["ruby_track_completedness"] %></h3>
      </div>
    </div>
  </div>

<div class="section-five">
    <div class="title">
      <h2><%=@profile.keys[15].capitalize%></h2>
        <div class="content">
          <h3 class ="profile-value"><%=@profile["projects"] %></h3>
        </div>
    </div>
</div>

  <div class="section-six">
    <div class="box">
      <div class="content">
        <div class="title">
          <h2>Edit Profile</h2>

          <form action="/update" method="POST">
            <fieldset>
              <div class="form-group">
                <label for="trainee[about]">About</label>
                <input type="text" name="trainee[about]" value="<%= @profile["about"] %>"/><p>

                <label for="trainee[ambition]">Ambition</label>
                <input type="text" name="trainee[ambition]" value="<%= @profile["ambition"] %>"/><p>

                <label for="trainee[projects]">Projects</label>
                <input type="text" name="trainee[projects]" value="<%= @profile["projects"] %>"/><p>

                <label for="trainee[first_name]">First Name</label>
                <input type="text" name="trainee[first_name]" value="<%= @profile["first_name"] %>"/><p>

                 <label for="trainee[last_name]">Last Name</label>
                <input type="text" name="trainee[last_name]" value="<%= @profile["last_name"] %>"/><p>

                 <label for="trainee[dob]">DOB</label>
                <input type="text" name="trainee[dob]" value="<%= @profile["dob"] %>"/><p>
                
                <label for="trainee[codecademy]">Codecademy Username</label>
                <input type="text" name="trainee[codecademy]" value="<%= @profile["codecademy"] %>"/><p>
              </div>
        </div>
    </div>
        <!-- TODO - Add more fields so that your profile can be edited -->

         <input type="submit" value="Update Profile" class="btn btn-primary" />
        </fieldset>
      </form>
    </div>
  </div>

<div class="section-seven">
    <div class="title">
      <h2>Stats</h2>
        <div class="content">
          <h3><span id="word-count">0</span> words found.</h3>
        </div>
    </div>
</div>

