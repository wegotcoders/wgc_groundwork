<% if @profile %>
  <h3><%= @profile["first_name"] %>'s Profile</h3>

  <!-- TODO- Perhaps re-jig this to fit your new design / layout -->
  <% @profile.each do |field, value| %>
    <div class="profile-section box">
      <h4><%= field %></h4>
      <p class="profile-value"><%= value %></p>
    </div>
  <% end %>

  <div id="stats" class="box">
    <h3>Stats</h3>
    <!-- TODO - Set the contents of this span with JavaScript -->
    <span id="word-count">0</span> words found.
  </div>

  <div id="problems" class="box">
    <h3>Programming Problems</h3>
    <a href="/primes">My Prime Number Solution</a>
  </div>

  <div class="box">
    <h3>Edit Profile</h3>

    <form action="/update" method="POST">
      <fieldset>
        <div class="form-group">
          <label for="trainee[about]">About</label>
          <input type="text" name="trainee[about]" value="<%= @profile["about"] %>"/>
        </div>

        <!-- TODO - Add more fields so that your profile can be edited -->
        <div class="form-group">
          <label for="trainee[ambition]">Ambition</label>
          <input type="text" name="trainee[ambition]" value="<%= @profile["ambition"] %>"/>
        </div>
        <div class="form-group">
          <label for="trainee[codecademy]">Code Academy</label>
          <input type="text" name="trainee[codecademy]" value="<%= @profile["codecademy"] %>"/>
        </div>
        <div class="form-group">
          <label for="trainee[dob]">D.O.B</label>
          <input type="text" name="trainee[dob]" value="<%= @profile["dob"] %>"/>
        </div>
        <div class="form-group">
          <label for="trainee[email]">Email</label>
          <input type="text" name="trainee[email]" value="<%= @profile["email"] %>"/>
        </div>
        <div class="form-group">
          <label for="trainee[employment_status]">Wage Slavery</label>
          <input type="text" name="trainee[employment_status]" value="<%= @profile["employment_status"] %>"/>
        </div>
        <div class="form-group">
          <label for="trainee[first_name]">What thee nameth</label>
          <input type="text" name="trainee[first_name]" value="<%= @profile["first_name"] %>"/>
        </div>
        <div class="form-group">
          <label for="trainee[gender]">Favorite Genre</label>
          <input type="text" name="trainee[gender]" value="<%= @profile["gender"] %>"/>
        </div>
        <div class="form-group">
          <label for="trainee[github]">You Git</label>
          <input type="text" name="trainee[github]" value="<%= @profile["github"] %>"/>
        </div>
        <div class="form-group">
          <label for="trainee[homepage]">Your Yard</label>
          <input type="text" name="trainee[homepage]" value="<%= @profile["homepage"] %>"/>
        </div>
        <div class="form-group">
          <label for="trainee[how_did_you_hear]">What's yer story</label>
          <input type="text" name="trainee[how_did_you_hear]" value="<%= @profile["how_did_you_hear"] %>"/>
        </div>
        <div class="form-group">
          <label for="trainee[last_name]">Old Name</label>
          <input type="text" name="trainee[last_name]" value="<%= @profile["last_name"] %>"/>
        </div>
        <div class="form-group">
          <label for="trainee[learning_experience]">Hackney Pirates</label>
          <input type="text" name="trainee[learning_experience]" value="<%= @profile["learning_experience"] %>"/>
        </div>
        <div class="form-group">
          <label for="trainee[phone_number]">Digits</label>
          <input type="text" name="trainee[phone_number]" value="<%= @profile["phone_number"] %>"/>
        </div>
        <div class="form-group">
          <label for="trainee[projects]">Projects</label>
          <input type="text" name="trainee[projects]" value="<%= @profile["projects"] %>"/>
        </div>
        <div class="form-group">
          <label for="trainee[rationale]">Rations</label>
          <input type="text" name="trainee[rationale]" value="<%= @profile["rationale"] %>"/>
        </div>
        <div class="form-group">
          <label for="trainee[twitter]">140 characters: Who am I?</label>
          <input type="text" name="trainee[twitter]" value="<%= @profile["twitter"] %>"/>
        </div>
        <input type="submit" value="Update Profile" class="btn btn-primary" />
      </fieldset>
    </form>
  </div>
<% else %>
  <div class="welcome">
    <p>Welcome! Once you have updated the OAuth tokens, the link below will fetch your profile information.</p>

    <a href="/authorise">Authorise</a>
  </div>
<% end %>


