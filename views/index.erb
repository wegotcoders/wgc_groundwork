    // count total words by counting spaces that immediately follow a letter.

    function countwords(text_block){
        var total_words = 0;
        var text = text_block;
          
        if(text_block.length > 0){
            total_words = 1;
            for (var j = 1; j <= text.length-1; j++) {
                if ((text[j] === " ")&&(text[j-1]!= " ")) {
                    total_words ++;
                }
            }
        }
            
        return total_words;
    }

    

