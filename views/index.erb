      </div>

      <div id="phone" class="basic-info">
        <h2><%=@profile.keys[13].capitalize%></h2>
        <h3><%=@profile["phone_number"] %></h3>
      </div>
    </div>
  </div>

  <div class="section-three">
    <div class="title">
      <h2><%=@profile.keys[1].capitalize%></h2>
        <div class="content">
