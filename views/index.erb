    </div>
  </div>

  <div class="section-four">
    <div class="title">
      <h2>Codecademy</h2>
        <div class="content">
          <h3>Username: <%=@profile["codecademy"] %></h3>
        </div>
    </div>

    <div class="info-container">
      <div id="htmlcss" class="basic-info">
        <h2>HTML & CSS </h2>
        <h3><%=@profile["web_track_completedness"] %></h3>
      </div>

      <div id="javascript" class="basic-info">
        <h2>Javascript</h2>
        <h3><%=@profile["js_track_completedness"] %></h3>
      </div>

      <div id="ruby" class="basic-info">
        <h2>Ruby</h2>
        <h3><%=@profile["ruby_track_completedness"] %></h3>
      </div>
    </div>
  </div>

<div class="section-five">
    <div class="title">
      <h2><%=@profile.keys[15].capitalize%></h2>
        <div class="content">
          <h3><%=@profile["projects"] %></h3>
        </div>
    </div>
  </div>

  <div class="section-six">
    <div class="box">
      <div class="content">
      <div class="title">
      <h2>Edit Profile</h2>

      <form action="/update" method="POST">
        <fieldset>
          <div class="form-group">
            <label for="trainee[about]">About</label>
            <input type="text" name="trainee[about]" value="<%= @profile["about"] %>"/>

            <label for="trainee[ambition]">Ambition</label>
            <input type="text" name="trainee[ambition]" value="<%= @profile["ambition"] %>"/>

            <label for="trainee[first_name]">First Name</label>
            <input type="text" name="trainee[first_name]" value="<%= @profile["first_name"] %>"/>

             <label for="trainee[last_name]">Last Name</label>
            <input type="text" name="trainee[last_name]" value="<%= @profile["last_name"] %>"/>

             <label for="trainee[dob]">DOB</label>
            <input type="text" name="trainee[dob]" value="<%= @profile["dob"] %>"/>

            <label for="trainee[projects]">Projects</label>
            <input type="text" name="trainee[projects]" value="<%= @profile["projects"] %>"/>
            
            <label for="trainee[codecademy]">Codecademy Username</label>
            <input type="text" name="trainee[codecademy]" value="<%= @profile["codecademy"] %>"/>
            
            <label for="trainee[webtrack]">Codecademy HTML & CSS Completed</label>
            <input type="text" name="trainee[webtrack]" value="<%= @profile["web_track_completedness"] %>"/>
            
            <label for="trainee[jstrack]">Codecademy Javascript Completed</label>
            <input type="text" name="trainee[jstrack]" value="<%= @profile["js_track_completedness"] %>"/>
           
            <label for="trainee[ruby_track_completedness]">Codecademy Ruby Completed</label>
            <input type="text" name="trainee[ruby_track_completedness]" value="<%= @profile["ruby_track_completedness"] %>"/>
          </div>
      </div>
    </div>
        <!-- TODO - Add more fields so that your profile can be edited -->

        <input type="submit" value="Update Profile" class="btn btn-primary" />
      </fieldset>
    </form>
  </div>
  </div>



<h3><%=@profile.keys[0] %></h3>
<h3><%=@profile["about"] %></h3>
<h3><%=@profile%></h3>

  <div id="stats" class="box">
