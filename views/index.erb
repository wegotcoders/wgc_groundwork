  var arr = [].slice.call(profile_field);
  wordCount();
  // TODO - Count the number of words in the profile.
  // hint - look at what the innerHTML property provides.
    function wordCount(){
      for (var i=9; i<profile_values.length; i++){
      box_words = profile_values[i].innerHTML.split(" ").length;
      total_words += box_words;
      if(box_words < 20){
        document.getElementById(arr[i].innerHTML).innerHTML = "You need 20 words or more, only " + box_words + ", ";
      }
      else{
        document.getElementById(arr[i].innerHTML).innerHTML = box_words;

      }
      document.getElementById("word-count").innerHTML = "Total of " + total_words;
  }
}
