	<input name="trainee[homepage]" value="<%= @profile["homepage"] %>" type="text">
</div>

<div class="form-group">
	<label for="trainee[github]">Github:</label><br>
	<input name="trainee[github]" value="<%= @profile["github"] %>" type="text">
