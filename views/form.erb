	<label for="trainee[employment_status]">Employment Status:</label><br>
	<select name="trainee[employment_status]" type="text-input">
		<% ["Employed", "Self-employed", "Unemployed", "Student"].each do |i| %>
			<option value=<%=i%> <%= 'selected = "selected"' unless @profile["employment_status"] != i %>><%= i %></option>
		<%end%>
	</select>
</div>

